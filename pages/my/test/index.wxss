.test-container {
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f8f9fa;
}

/* 结果卡片样式 */
.result-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-left: 16rpx;
}

.result-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 雷达图样式 */
.radar-container {
  display: flex;
  justify-content: center;
  margin: 24rpx 0;
  background: rgba(0, 82, 217, 0.05);
  padding: 24rpx;
  border-radius: 12rpx;
}

.radar-image {
  width: 400rpx;
  height: 400rpx;
}

/* 能力值展示 */
.ability-container {
  margin: 24rpx 0;
}

.ability-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.ability-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}

.ability-bar-container {
  flex: 1;
  height: 16rpx;
  background-color: #f2f3ff;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 16rpx;
}

.ability-bar {
  height: 100%;
  background: linear-gradient(90deg, #0052d9, #44a9ff);
  border-radius: 8rpx;
}

.ability-value {
  width: 80rpx;
  font-size: 24rpx;
  color: #0052d9;
  text-align: right;
}

/* 推荐鱼种样式 */
.recommended-fishes {
  margin-top: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #0052d9;
  padding-left: 16rpx;
}

.fish-list {
  margin-top: 16rpx;
}

.fish-item {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
}

.fish-item:active {
  transform: scale(0.98);
  background-color: #f2f3ff;
}

.fish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  object-fit: cover;
}

.fish-info {
  flex: 1;
}

.fish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.fish-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 48rpx;
}

/* 空状态和未完成测试状态 */
.empty-state, .unfinished-test {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
}

.empty-title, .unfinished-title {
  margin: 0 0 24rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.empty-description, .unfinished-description {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  max-width: 80%;
}

/* 吉卜力风格按钮 */
.start-test-btn, .t-button--primary {
  background-color: #7bb661 !important; /* 吉卜力风格的绿色 */
  border-color: #7bb661 !important;
  box-shadow: 0 6rpx 12rpx rgba(123, 182, 97, 0.2);
  transition: all 0.3s ease;
}

.start-test-btn:active, .t-button--primary:active {
  background-color: #6a9e53 !important;
  transform: translateY(2rpx);
} 