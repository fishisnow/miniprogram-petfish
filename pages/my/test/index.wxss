.test-container {
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f8f9fa;
}

/* 结果卡片样式 */
.result-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 16rpx 0 24rpx;
}

.result-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
  padding: 0 16rpx;
  text-align: center;
}

/* 性格分析区域 */
.analysis-section {
  margin: 32rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #0052d9;
  padding-left: 16rpx;
}

/* 图表容器 */
.chart-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.radar-chart {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

/* 维度图表 */
.dimensions-chart {
  width: 100%;
  margin-top: 16rpx;
}

.dimension-item {
  margin-bottom: 16rpx;
}

.dimension-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.dimension-name {
  font-size: 26rpx;
  color: #666;
}

.dimension-score {
  font-size: 26rpx;
  color: #0052d9;
  font-weight: bold;
}

.dimension-bar-bg {
  width: 100%;
  height: 16rpx;
  background-color: #f2f3ff;
  border-radius: 8rpx;
  overflow: hidden;
}

.dimension-bar {
  height: 100%;
  background: linear-gradient(90deg, #0052d9, #44a9ff);
  border-radius: 8rpx;
}

/* 推荐鱼种样式 */
.recommended-section {
  margin-top: 32rpx;
}

.fish-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.fish-item {
  background-color: #f2f3ff;
  color: #0052d9;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  display: inline-block;
}

/* 操作按钮样式 */
.action-area {
  display: flex;
  justify-content: space-between;
  margin-top: 48rpx;
  gap: 16rpx;
}

.share-btn, .restart-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn {
  background-color: #ffffff;
  color: #0052d9;
  border: 2rpx solid #e0e0e0;
}

.restart-btn {
  background-color: #0052d9;
  color: #ffffff;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  background-size: contain;
  margin-right: 8rpx;
}

/* 空状态和未完成测试状态 */
.empty-state, .unfinished-test {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
}

.empty-title, .unfinished-title {
  margin: 0 0 24rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.empty-description, .unfinished-description {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  max-width: 80%;
} 