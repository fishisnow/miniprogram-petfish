.favorites-container {
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f8f9fa;
}

.favorites-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.favorites-count {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.favorites-search {
  margin-bottom: 8rpx;
}

.favorites-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding-bottom: 24rpx;
}

.favorites-footer {
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
}

.favorites-tip {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 240rpx;
  height: 60vh;
}

.empty-text {
  margin: 0 0 24rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.empty-sub-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
}

/* 吉卜力风格按钮 */
.explore-btn, .t-button--primary {
  background-color: #7bb661 !important; /* 吉卜力风格的绿色 */
  border-color: #7bb661 !important;
  box-shadow: 0 6rpx 12rpx rgba(123, 182, 97, 0.2);
  transition: all 0.3s ease;
}

.explore-btn:active, .t-button--primary:active {
  background-color: #6a9e53 !important;
  transform: translateY(2rpx);
} 