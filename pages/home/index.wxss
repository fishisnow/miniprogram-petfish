.home-container {
  padding-bottom: 120rpx;  /* 为底部发布按钮留出空间 */
}

.home-content {
  min-height: calc(100vh - 120rpx);  /* 确保内容区域填满屏幕 */
  display: flex;
  flex-direction: column;
}

.bottom-tip {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
  margin-top: auto;  /* 将提示推到内容区域底部 */
} 