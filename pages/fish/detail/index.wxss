.fish-detail {
  background-color: #f6f6f6;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 新的图片容器样式 */
.fish-image-container {
  width: 100%;
  height: 500rpx;
  background-color: #000;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fish-main-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
}

/* 图片指示点 */
.image-dots {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 10;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 50%;
  margin: 0 8rpx;
  transition: all 0.3s;
}

.dot.active {
  background: #fff;
  transform: scale(1.2);
}

/* 左右箭头 */
.arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
  font-size: 28rpx;
  background: rgba(0,0,0,0.3);
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.left-arrow {
  left: 20rpx;
}

.right-arrow {
  right: 20rpx;
}

.info-section {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  margin-bottom: 30rpx;
}

.title-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.favorite-icon {
  padding: 10rpx;
}

.info-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
  flex: 1;
}

.scientific-name {
  font-size: 28rpx;
  color: #888;
  font-style: italic;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #0052d9;
  color: #333;
}

.section-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #555;
}

.description-section, .care-guide-section, .breeding-section {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 6rpx 0;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  padding: 0 10rpx;
}

.description-list {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  padding: 0 10rpx;
}

.description-item {
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 10rpx;
}

.parameter-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  flex-wrap: wrap; /* 允许在小屏幕上换行 */
}

.parameter-item {
  flex: 1;
  min-width: 30%; /* 确保在小屏幕上不会太窄 */
  text-align: center;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0 10rpx 10rpx 10rpx;
}

.parameter-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.parameter-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #0052d9;
}

.info-item {
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.diet-list {
  display: flex;
  flex-wrap: wrap;
}

.diet-item {
  background-color: #f1f5ff;
  color: #0052d9;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.disease-section {
  margin-top: 20rpx;
  padding: 0 10rpx;
}

.disease-list {
  margin-top: 20rpx;
}

.disease-item {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.disease-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.disease-info {
  font-size: 26rpx;
  margin-bottom: 8rpx;
  line-height: 1.6;
  color: #555;
}

.disease-label {
  color: #666;
  font-weight: bold;
}

.breeding-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  flex-wrap: wrap; /* 允许在小屏幕上换行 */
}

.breeding-item {
  flex: 1;
  min-width: 30%; /* 确保在小屏幕上不会太窄 */
  text-align: center;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0 10rpx 10rpx 10rpx;
}

.breeding-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.breeding-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.navbar-right {
  padding-right: 32rpx;
  display: flex;
  align-items: center;
} 