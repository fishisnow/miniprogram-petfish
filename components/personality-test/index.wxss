.personality-test {
  height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.test-swiper {
  height: 80vh;
}

.question-card {
  margin: 20rpx;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.question-number {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.question-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.option-item:active {
  background: #e0e0e0;
}

.test-result {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.result-card {
  width: 80%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  overflow-y: auto;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.result-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.radar-chart {
  width: 100%;
  height: 500rpx;
  margin: 30rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.fish-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.fish-item {
  padding: 10rpx 20rpx;
  background: #f0f9ff;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #0066cc;
}

.restart-btn {
  margin-top: 40rpx;
  background: #0066cc;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
} 