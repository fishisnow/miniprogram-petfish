.personality-test {
  position: relative;
  width: 100%;
  height: 100%;
  background: #f5f7fa;
  display: flex;
  flex-direction: column;
}

.nav-area {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  padding: 20rpx 30rpx;
  margin-top: 180rpx;
  z-index: 1000;
  display: flex;
  align-items: center;
}

.back-button {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.back-icon {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #333;
  border-left: 4rpx solid #333;
  transform: rotate(-45deg);
  margin-left: 6rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  margin-left: 20rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  z-index: 9999;
}

.progress-inner {
  height: 100%;
  background: #4CAF50;
  border-radius: 4rpx;
  transition: width 0.3s ease;
  min-width: 8rpx;
}

.test-content {
  flex: 1;
  width: 100%;
  margin-top: 20rpx;
}

.test-swiper {
  width: 100%;
  height: 100%;
}

.question-card {
  margin: 10rpx 30rpx 30rpx;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.question-number {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.question-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.option-item.selected {
  background: #E8F5E9;
  border: 2rpx solid #4CAF50;
}

.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-content text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.check-icon {
  color: #4CAF50;
  font-size: 40rpx;
  margin-left: 20rpx;
}

.test-result {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #ffffff;
  z-index: 2000;
  padding: 40rpx;
  box-sizing: border-box;
  padding-top: calc(40rpx + env(safe-area-inset-top));
}

.result-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.result-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-description {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
}

.fish-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.fish-item {
  padding: 16rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.restart-btn {
  margin-top: 40rpx;
  background: #4CAF50;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 32rpx;
} 