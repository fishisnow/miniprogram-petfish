/* 增加适配小程序码样式 */
.qr-code {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.footer-text {
  font-size: 24rpx;
  color: #88c0a8;
  text-align: center;
  margin: 16rpx 0;
  line-height: 1.5;
} 