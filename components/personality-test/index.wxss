.personality-test {
  position: relative;
  width: 100%;
  height: 100%;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

.nav-area {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  padding: 20rpx 30rpx;
  margin-top: 180rpx;
  z-index: 1000;
  display: flex;
  align-items: center;
}

.back-button {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.back-icon {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #333;
  border-left: 4rpx solid #333;
  transform: rotate(-45deg);
  margin-left: 6rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  margin-left: 20rpx;
  background: rgba(0, 0, 0, 0.08);
  border-radius: 4rpx;
  z-index: 9999;
}

.progress-inner {
  height: 100%;
  background: #88c0a8;
  border-radius: 4rpx;
  transition: width 0.3s ease;
  min-width: 8rpx;
}

.test-content {
  flex: 1;
  width: 100%;
  margin-top: 20rpx;
}

.test-swiper {
  width: 100%;
  height: 100%;
}

.question-card {
  margin: 10rpx 30rpx 30rpx;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.question-number {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 20rpx;
}

.question-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.option-item.selected {
  background: #E8F5E9;
  border: 2rpx solid #88c0a8;
}

.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-content text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.check-icon {
  color: #88c0a8;
  font-size: 40rpx;
  margin-left: 20rpx;
}

/* 修改结果页面样式，统一现代化UI风格 */
.test-result {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f3f8ee; /* 与测试页面保持一致的背景色 */
  z-index: 2000;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.result-header {
  width: 100%;
  padding: 0 20rpx;
  background: #88c0a8; /* 吉卜力风格的绿色 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  margin-top: calc(44px); /* 状态栏高度 */
  box-sizing: border-box;
}

.result-header .back-button {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(2px);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.result-header .back-button .back-icon {
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #fff;
  border-left: 3rpx solid #fff;
  transform: rotate(-45deg);
  margin-left: 6rpx;
}

.result-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  margin: 0;
  padding: 0;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
  letter-spacing: 2rpx;
  max-width: 80%;
  line-height: 88rpx;
}

.result-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
  margin-top: 20rpx;
}

.result-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 30rpx;
  border: 1px solid rgba(136, 192, 168, 0.2);
  position: relative;
}

/* 长按保存提示 */
.save-tip {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #88c0a8;
  background: rgba(255, 255, 255, 0.95);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(136, 192, 168, 0.15);
  letter-spacing: 1rpx;
  font-weight: 500;
  border: 1px solid rgba(136, 192, 168, 0.1);
  z-index: 10;
}

.result-description {
  font-size: 28rpx;
  color: #5a6268;
  margin-bottom: 20rpx;
  text-align: justify;
  line-height: 1.8;
  padding: 20rpx;
  background: #f9fdf5;
  border-radius: 16rpx;
  border-left: 6rpx solid #88c0a8;
  max-width: 100%;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* 雷达图样式 */
.radar-chart {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: relative;
  padding: 10rpx;
  border-radius: 20rpx;
}

.radar-chart canvas {
  width: 220px !important;
  height: 220px !important;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 110px;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.03);
}

.radar-chart image {
  width: 220px !important;
  height: auto;
  border-radius: 110px;
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.03);
}

/* 维度评分条形图 */
.dimensions-chart {
  width: 100%;
  margin: 10rpx 0;
  padding: 20rpx 10rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.dimension-item {
  margin-bottom: 18rpx;
}

.dimension-item:last-child {
  margin-bottom: 0;
}

.dimension-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.dimension-name {
  font-size: 26rpx;
  color: #4b6c5d;
  font-weight: 500;
}

.dimension-score {
  font-size: 26rpx;
  font-weight: bold;
}

/* 各个性格类型的不同颜色 - 吉卜力风格与现代UI结合 */
.dimension-item:nth-child(1) .dimension-bar {
  background: linear-gradient(90deg, #88c0a8, #b5e0cc);
}

.dimension-item:nth-child(2) .dimension-bar {
  background: linear-gradient(90deg, #5e9eb8, #8ac7e0);
}

.dimension-item:nth-child(3) .dimension-bar {
  background: linear-gradient(90deg, #f197a3, #f7bbc4);
}

.dimension-item:nth-child(4) .dimension-bar {
  background: linear-gradient(90deg, #b2c75f, #d4e590);
}

.dimension-item:nth-child(5) .dimension-bar {
  background: linear-gradient(90deg, #ffc266, #ffd699);
}

.dimension-item:nth-child(6) .dimension-bar {
  background: linear-gradient(90deg, #b699cc, #d7c2e3);
}

/* 让不同维度的分数显示对应的颜色 */
.dimension-item:nth-child(1) .dimension-score {
  color: #88c0a8;
}

.dimension-item:nth-child(2) .dimension-score {
  color: #5e9eb8;
}

.dimension-item:nth-child(3) .dimension-score {
  color: #f197a3;
}

.dimension-item:nth-child(4) .dimension-score {
  color: #b2c75f;
}

.dimension-item:nth-child(5) .dimension-score {
  color: #ffc266;
}

.dimension-item:nth-child(6) .dimension-score {
  color: #b699cc;
}

/* 为不同维度设置不同颜色的条形图 */
.dimension-bar-bg {
  height: 14rpx;
  background: #edf5f0;
  border-radius: 7rpx;
  overflow: hidden;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
}

/* 默认颜色 */
.dimension-bar {
  height: 100%;
  background: linear-gradient(90deg, #88c0a8, #b5e0cc);
  border-radius: 7rpx;
  transition: width 1s ease;
}

/* 推荐鱼种部分 */
.recommended-section {
  margin: 20rpx 0 0;
  background: #f9fdf5;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4b6c5d;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 8rpx;
  height: 28rpx;
  width: 6rpx;
  background: #88c0a8;
  border-radius: 3rpx;
}

.fish-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.fish-item {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #4b6c5d;
  border: 1px solid rgba(136, 192, 168, 0.3);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  position: relative;
  padding-left: 30rpx;
}

.fish-item::before {
  content: "";
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #88c0a8;
}

/* 按钮区域 */
.action-area {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.04);
  background: #ffffff;
}

.restart-btn {
  flex: 1;
  background: #88c0a8;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 16rpx 0;
  box-shadow: 0 6rpx 12rpx rgba(136, 192, 168, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
  border: none;
  margin-left: 16rpx;
}

.share-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  color: #88c0a8;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 16rpx 0;
  box-shadow: 0 6rpx 12rpx rgba(136, 192, 168, 0.1);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
  border: 2rpx solid #e0e0e0;
  margin-right: 16rpx;
}

.restart-btn:active,
.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4b6c5d;
  text-align: center;
  margin: 10rpx 0 30rpx;
  padding-bottom: 16rpx;
  position: relative;
}

.card-title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: #88c0a8;
  border-radius: 2rpx;
}

.analysis-section {
  margin: 20rpx 0 30rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.chart-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  margin-top: 10rpx;
}

